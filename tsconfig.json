{
  "include": [
    "src",
    "src/mocks/**/*.json"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/__mocks__/**/*"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "sourceMap": true,
    "lib": [
      "ES2017",
      "ES2020"
    ],
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    // "bun-types" is the important part
    "types": [
      "bun-types"
    ],
    "declaration": true,
  }
}